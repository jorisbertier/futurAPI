{% extends 'base.html.twig' %}

{% block title %}Eth index{% endblock %}

{% block body %}
    <h1>Eth index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CurrentPrice</th>
                <th>Update date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for eth in eths %}
            <tr>
                <td>{{ eth.id }}</td>
                <td>{{ eth.currentPrice }}</td>
                <td>{{ eth.updateDate|date('Y-m-d H:i:s') }}</td>
                <td>
                    <a href="{{ path('app_eth_show', {'id': eth.id}) }}">show</a>
                    <a href="{{ path('app_eth_edit', {'id': eth.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_eth_new') }}">Create new</a>
{% endblock %}
