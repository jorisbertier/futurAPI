{% extends 'base.html.twig' %}

{% block title %}Transaction index{% endblock %}

{% block body %}
    <h1>Transaction index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateTransaction</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr>
                <td>{{ transaction.id }}</td>
                <td>{{ transaction.dateTransaction ? transaction.dateTransaction|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ transaction.description }}</td>
                <td>
                    <button type="submit" class="btn showButton"><a href="{{ path('app_transaction_show', {'id': transaction.id}) }}">show</a></button>
                    <button type="submit" class="btn editButton"><a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="submit" class="btn showButton"><a href="{{ path('app_transaction_new') }}">Create new</a></button>
{% endblock %}
