{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
    <h1>Transaction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>DateTransaction</th>
                <td>{{ transaction.dateTransaction ? transaction.dateTransaction|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ transaction.description }}</td>
            </tr>
        </tbody>
    </table>

    <button type="submit" class="btn editButton"><a href="{{ path('app_transaction_index') }}">back to list</a></button>

    <button type="submit" class="btn showButton"><a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">edit</a></button>

    {{ include('transaction/_delete_form.html.twig') }}
{% endblock %}
