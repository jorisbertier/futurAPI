{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>
    {{ form_start(form) }}
        {{ form_row(form.mediaCategory) }}
        <button type="submit" class="btn showButton">Rechercher</button>
    {{ form_end(form) }}
    <br>
    <br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.label }}</td>
                <td>
                    <button type="submit" class="btn showButton"><a href="{{ path('app_category_show', {'id': category.id}) }}">show</a></button>
                    <button type="submit" class="btn editButton"><a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(categories, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </div>

    <button type="submit" class="btn showButton"><a href="{{ path('app_category_new') }}">Create new</a></button>
{% endblock %}
