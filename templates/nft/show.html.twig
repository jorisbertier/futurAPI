{% extends 'base.html.twig' %}

{% block title %}Nft{% endblock %}

{% block body %}
    <h1>Nft</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ nft.id }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ nft.dateCreation ? nft.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateDrop</th>
                <td>{{ nft.dateDrop ? nft.dateDrop|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ nft.price }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ nft.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ nft.description }}</td>
            </tr>
            <tr>
                <th>FilePath</th>
                <td>{{ nft.filePath }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ nft.alt }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_nft_index') }}">back to list</a>

    <a href="{{ path('app_nft_edit', {'id': nft.id}) }}">edit</a>

    {{ include('nft/_delete_form.html.twig') }}
{% endblock %}
