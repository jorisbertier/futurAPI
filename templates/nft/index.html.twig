{% extends 'base.html.twig' %}

{% block title %}Nft index{% endblock %}

{% block body %}

    <h1>Nft index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateCreation</th>
                <th>DateDrop</th>
                <th>Price</th>
                <th>Title</th>
                <th>Description</th>
                <th>FilePath</th>
                <th>Alt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nft in nfts %}
            <tr>
                <td>{{ nft.id }}</td>
                <td>{{ nft.dateCreation ? nft.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ nft.dateDrop ? nft.dateDrop|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ nft.price }}</td>
                <td>{{ nft.title }}</td>
                <td>{{ nft.description }}</td>
                <td>{{ nft.filePath }}</td>
                <td>{{ nft.alt }}</td>
                <td>
                    <a href="{{ path('app_nft_show', {'id': nft.id}) }}">show</a>
                    <a href="{{ path('app_nft_edit', {'id': nft.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_nft_new') }}">Create new</a>

{% endblock %}
